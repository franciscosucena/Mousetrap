<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginLockTheme" parent="Lock.Theme">
        <item name="Auth0.HeaderLogo">@drawable/logo</item>
        <item name="Auth0.HeaderTitle">@string/app_name</item>
        <item name="Auth0.HeaderTitleColor">@color/colorAccent</item>
        <item name="Auth0.HeaderBackground">@color/colorPrimaryDark</item>
        <item name="Auth0.PrimaryColor">@color/colorPrimary</item>
        <item name="Auth0.DarkPrimaryColor">@color/colorPrimaryDark</item>
    </style>

</resources>
